{
  "name": "paprika-mcp-server",
  "version": "1.0.0",
  "description": "MCP server that provides AI assistants access to Paprika Recipe Manager data",
  "bin": {
    "paprika-mcp-server": "./dist/index.cjs"
  },
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint",
    "fix": "eslint --fix",
    "build": "node esbuild.config.js && chmod +x dist/index.cjs",
    "build:prod": "MINIFY=true node esbuild.config.js && chmod +x dist/index.cjs",
    "package": "mcpb pack . paprika-mcp-server.mcpb",
    "version": "changeset version && node scripts/sync-manifest-version.js",
    "start": "tsx src/index.ts"
  },
  "files": [
    "dist"
  ],
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "@anthropic-ai/mcpb": "^2.1.2",
    "@changesets/cli": "^2.27.12",
    "@eslint/js": "^9.39.2",
    "@swc/core": "^1.15.11",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.2",
    "@types/unzipper": "^0.10.11",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "zod": "^4.3.6"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@rushstack/ts-command-line": "^5.2.0",
    "ajv": "^8.18.0",
    "jiti": "^2.6.1",
    "rxdb": "^16.21.1",
    "unzipper": "^0.12.3",
    "zod-to-json-schema": "^3.25.1"
  }
}